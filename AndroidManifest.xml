<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_viewpager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android_viewpager.ApplicationStartActivity"
            android:label="@string/title_activity_application_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android_viewpager.HorizontalStartActivity"
            android:label="@string/title_activity_horizontal_start" >
        </activity>
        <activity
            android:name="com.example.android_viewpager.VerticalActivity"
            android:label="@string/title_activity_vertical" >
        </activity>
    </application>

</manifest>